<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zl.dao.LoginUserDao">
    <select id="login" parameterType="com.zl.pojo.LoginUser" resultType="com.zl.pojo.LoginUser">
        SELECT 
        	userid,username,pwd,realname,tel,wechat,mail,idcard 
        from 
        	LoginUser 
        where 
        	(username=#{userName} or tel=#{userName}) and pwd=#{pwd}
    </select> 
    
    <insert id="aadLoginUser" parameterType="com.zl.pojo.LoginUser">
   		insert into loginUser values (bu_seqe1.nextval,#{userName},#{pwd},
   		#{realName},#{tel},#{wechat},#{mail},#{idCard},sysdate)
    </insert>
    
</mapper>